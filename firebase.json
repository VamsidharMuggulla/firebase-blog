{
  "hosting": {
    "public": "app",
    "rewrites": [
      {
        "source": "/blog",
        "function": "blog"
      },
      {
        "source": "/blog/*",
        "function": "blogpost"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
